package Hooks;
 
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
 
import io.cucumber.java.After;
import io.cucumber.java.Before;
import io.cucumber.java.Scenario;
import utils.DriverFactory;
 
public class Hooks {

    @Before
    public void setUp() {
        // DriverFactory.getDriver() is now handled by the Step Definition class,
        // so no need to call it here. This hook is good for pre-scenario setup.
        // E.g. logging, setting up test data, etc.
        System.out.println("Browser launched before scenario");
    }

    @After
    public void tearDown(Scenario scenario) {
        WebDriver driver = DriverFactory.getDriver();
        if(scenario.isFailed()) {
            // Attach the screenshot to the report
            byte[] screenshot = ((TakesScreenshot) driver).getScreenshotAs(OutputType.BYTES);
            scenario.attach(screenshot, "image/png", "Failed Screenshot"); 
        }
        DriverFactory.quitDriver();
        System.out.println("Browser closed after the scenario");
    }
}