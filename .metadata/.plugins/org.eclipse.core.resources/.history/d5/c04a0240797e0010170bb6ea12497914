package TestRunner;
import org.junit.runner.RunWith;
import io.cucumber.junit.Cucumber;
import io.cucumber.junit.CucumberOptions;
 
@RunWith(Cucumber.class)
@CucumberOptions(
		features = {"src/test/resource/Features/login.feature"}
		,glue = {"StepDefinitions"},
		plugin = {
		        "pretty",                                    // Prints a clean console output
		        "html:target/cucumber-reports/cucumber.html", // Generates a standard HTML report
		        "json:target/cucumber-reports/cucumber.json"  // Generates a JSON report
		    },
		    tags = "@regression"
		)
 
public class MyTestRunner {

 
}